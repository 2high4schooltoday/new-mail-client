LISTEN_ADDR=:8080
BASE_DOMAIN=example.com

APP_DB_PATH=./data/app.db
APP_DB_MAX_OPEN_CONNS=4
APP_DB_MAX_IDLE_CONNS=2
APP_DB_CONN_MAX_LIFETIME_MIN=30

SESSION_COOKIE_NAME=mailclient_session
SESSION_IDLE_MINUTES=30
SESSION_ABSOLUTE_HOURS=24
SESSION_ENCRYPT_KEY=CHANGE_THIS_TO_A_LONG_RANDOM_32_PLUS_CHAR_SECRET
CSRF_COOKIE_NAME=mailclient_csrf
COOKIE_SECURE_MODE=auto
COOKIE_SECURE=false
TRUST_PROXY=false
CORS_ALLOWED_ORIGINS=

CAPTCHA_ENABLED=false
# Providers: turnstile | hcaptcha | cap
CAPTCHA_PROVIDER=turnstile
# For CAP provider, set your public site key.
CAPTCHA_SITE_KEY=
# Public widget API base for CAP, e.g. /cap/<site_key>/ when proxied by nginx/apache.
CAPTCHA_WIDGET_API_URL=
# Verification endpoint from app host, e.g. http://127.0.0.1:8077/<site_key>/siteverify
CAPTCHA_VERIFY_URL=
CAPTCHA_SECRET=

PASSWORD_MIN_LENGTH=12
PASSWORD_MAX_LENGTH=128

IMAP_HOST=127.0.0.1
IMAP_PORT=993
IMAP_TLS=true
IMAP_STARTTLS=false
IMAP_INSECURE_SKIP_VERIFY=false

SMTP_HOST=127.0.0.1
SMTP_PORT=587
SMTP_TLS=false
SMTP_STARTTLS=true
SMTP_INSECURE_SKIP_VERIFY=false

DOVECOT_AUTH_DB_DRIVER=
DOVECOT_AUTH_DB_DSN=
DOVECOT_AUTH_MODE=sql
DOVECOT_AUTH_TABLE=users
DOVECOT_AUTH_EMAIL_COL=email
DOVECOT_AUTH_PASS_COL=password_hash
DOVECOT_AUTH_ACTIVE_COL=active
DOVECOT_AUTH_MAILDIR_COL=maildir
DOVECOT_MAILDIR_BASE=/var/mail/vhosts

HTTP_READ_TIMEOUT_SEC=10
HTTP_READ_HEADER_TIMEOUT_SEC=5
HTTP_WRITE_TIMEOUT_SEC=30
HTTP_IDLE_TIMEOUT_SEC=60

PASSWORD_RESET_SENDER=log
PASSWORD_RESET_FROM=webmaster@example.com
PASSWORD_RESET_BASE_URL=

UPDATE_ENABLED=true
UPDATE_REPO_OWNER=2high4schooltoday
UPDATE_REPO_NAME=new-mail-client
UPDATE_CHECK_INTERVAL_MIN=60
UPDATE_HTTP_TIMEOUT_SEC=10
UPDATE_GITHUB_TOKEN=
UPDATE_BACKUP_KEEP=3
UPDATE_BASE_DIR=/var/lib/mailclient/update
UPDATE_INSTALL_DIR=/opt/mailclient
UPDATE_SERVICE_NAME=mailclient
UPDATE_SYSTEMD_UNIT_DIR=/etc/systemd/system

# Optional emergency bootstrap (normally keep empty and use web OOBE).
BOOTSTRAP_ADMIN_EMAIL=
BOOTSTRAP_ADMIN_PASSWORD=
